@import '../../styles/variables.styl'

.container
  position sticky
  bottom 0
  display flex
  align-items center
  justify-content center
  background-color white
  box-shadow $box-shadow

.input
  max-width 600px
  width 100%
  height 50px
  border none
  background-color white
  outline-color $primary
  font-size $text-default
  text-indent $spacer-s
  margin-right $spacer-s

.sendButton
  height 20px
  margin 0 $spacer-s
  border none
  background-color transparent
  outline-color $primary
  opacity 1

  &.disabled
    opacity 0.2

  img
    height 20px

.privacyCheckbox
  position relative
  height 20px
  width 20px
  margin 0 $spacer-s

  input
    outline none

    &:checked + .checkbox
      background-image url(/static/eye-off.svg)

    // Reproduce the outline
    &:focus + .checkbox
      -webkit-box-shadow 0px 0px 5px 2px rgba(3,169,244,1)
      -moz-box-shadow 0px 0px 5px 2px rgba(3,169,244,1)
      box-shadow 0px 0px 5px 2px rgba(3,169,244,1)

  .checkbox
    position absolute
    top 0
    left 0
    height 20px
    width 20px
    background-image url(/static/eye.svg)
    background-size contain
    cursor pointer
    background-color white