@import '../../styles/variables.styl'

.container
  min-height 100vh
  background-color $primary
  display flex
  flex-direction column
  align-items center
  justify-content center

.input,
.submit
  margin-bottom ($spacer * 2)

.title
  color $light-text
  margin-bottom ($spacer * 4)

.input
  height 35px
  max-width 220px
  margin-top ($spacer * 2)
  width 100%
  border none
  border-radius $radius
  font-size $text-large
  text-indent 10px

.submit
  border none
  height 30px
  width 30px
  background-color transparent 
  background-image url(/static/check-circle.svg)
  background-repeat no-repeat
  background-size cover
  cursor pointer
  opacity 1
  transition opacity 250ms
  will-change opacity

.submit.disabled
  opacity 0.2

.label
  font-size 12px
  color $light-text
  margin-top $spacer-s
  opacity 0.8